{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "custom-lsp": {
      "command": ["basedpyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"]
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--executable-path",
        "/usr/sbin/chromium"
      ]
    }
  }
}
